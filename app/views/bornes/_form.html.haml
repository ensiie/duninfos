= form_for borne , :html => {:multipart => true}  do |f|
  = javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=false', 'gmap3-min'
  
  %div(data-role="fieldcontain")
    = f.label :batiment
    = collection_select(:borne, :batiment_id, @batiments, :id, :nom)
  = form_geolocation_fields f
  %div(data-role="fieldcontain")
    = f.label :photo
    = f.file_field :photo

  = f.submit
